@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<table class="table table-striped">
    <tr>
        <th>Código</th>
        <th>Nombre Producto</th>
        <th>Precio</th>
        <th>Cantidad</th>
        <th>Total</th>
        <th> </th>
        <th> </th>

    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td><a href="@Url.Action("Edit","Product" , new { @id=@Model.Rows[i][0]})">Edit</a></td>
            <td><a href="@Url.Action("Delete","Product" , new { @id=@Model.Rows[i][0]})">Delete</a></td>
        </tr>
    }

</table>

<a href="@Url.Action("Create","Product")">Nuevo</a>

